<h1>Cards</h1>

<%= link_to 'New Card', new_column_card_path(params[:column_id]) %>

<div class="card-container">
  <% @cards.each do |card| %>
    <div class="card" style="border: 3px solid #000; padding: 10px; margin: 10px; width: 250px">
      <h3><%= card.title %></h3>
      <p><%= card.description %></p>

    </div>
  <% end %>
</div>

