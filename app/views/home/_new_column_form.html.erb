   <%= form_with model: @column do |form| %>
      <div class="flex flex-col mb-4">
        <%= form.label :title, class: "text-stone-50" %>
        <%= form.text_field :title, class: "bg-slate-800 border border-gray-400 rounded-md p-2 w-full text-white" %>
      </div>

      <div class="flex flex-col mb-4">
        <%= form.label :description, class: "text-stone-50" %>
        <%= form.text_area :description, class: "bg-slate-800 border border-gray-400 rounded-md p-2 w-full text-white", rows: 4 %>
      </div>

      <div class="flex flex-col mb-4">
        <%= form.label :color_code, 'Choose Color', class: "text-stone-50" %>
        <%= form.select :color_code, options_for_select([['Red', '#9E2B3A'], ['Green', '#088331'], ['Blue', '#3799BD'], ['Yellow', '#D0A945'], ['Purple', '#A66DB8']]), { include_blank: 'Select a color' }, class: "bg-slate-800 border border-gray-400 rounded-md p-2 w-full text-white" %>
      </div>

      <div class="flex items-center mt-4 space-x-4">
        <%= form.submit 'Create Column', class: 'bg-green-600 text-black border-none rounded-full py-2 px-7 text-lg cursor-pointer text-center' %>

        <button id="closeColumnModal" type="button" class="bg-slate-800 text-green-800 border border-green-800 rounded-full py-2 px-7 text-lg cursor-pointer text-center hover:bg-gray-800">
          Cancel
        </button>
      </div>
    <% end %>