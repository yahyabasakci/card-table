 <body class="bg-gray-900">
 <h1 class="absolute top-0 left-1/2 transform -translate-x-1/2 mt-4 text-6xl font-bold text-center text-teal-50 hover:underline">
    INTERN PROJECT
  </h1>




<!-- Modal HTML -->
<div id="cardModal" class="fixed inset-0 bg-gray-900 bg-opacity-50 flex items-center justify-center hidden">
  <div class="flex flex-col mb-4 bg-slate-800 p-6 rounded-lg shadow-lg relative modal-content text-stone-50 text-xl">
    <p>Add a new card to Triage</p>
    <br>

  
    <%= form_with model: [@user, @card], local: true do |form| %>
      <div class="flex items-center mb-2">
        <%= form.label :title, class: "w-1/3 text-stone-50" %>
        <%= form.text_field :title, class: "bg-slate-800 border border-gray-400 rounded-md p-2 w-2/3 text-white" %>
      </div>

      <div class="flex items-center mb-2">
        <%= form.label :assign_card, 'Assign Card', class: "w-1/3 text-stone-50"%>
        <%= form.text_field :assign_card, class: "bg-slate-800 border border-gray-400 rounded-md p-2 w-2/3 text-white" %>
      </div>

        <div class="flex items-center mb-2">
        <%= form.label :due_on, 'Due on', class: "w-1/3 text-stone-50"%>
        <%= form.text_field :due_on, class: "bg-slate-800 border border-gray-400 rounded-md p-2 w-2/3 text-white" %>
      </div>
      

      <div class="flex flex-col mb-4">
        <%= form.label :description, class: "text-stone-50" %>
        <%= form.text_area :description, class:"bg-slate-800 border border-gray-400 rounded-md p-2 w-full text-white", rows: 4 %>
      </div>

      <div class=" flex items-center mt-4 space-x-4 ">
        <%= form.submit 'Save', class: 'bg-green-600 text-black border-none rounded-full py-2 px-7 text-lg cursor-pointer text-center' %>

        <button id="closeModal" type="button" class="bg-slate-800 text-green-800 border border-green-800 rounded-full py-2 px-7 text-lg cursor-pointer text-center hover:bg-gray-800">
          Cancel
        </button>

      </div>
      
    <% end %>
  </div>
</div>

<!-- Buton -->
<%= link_to '+ Add a card', '#', id: 'openModalButton', class: 'absolute top-11 left-50 bg-green-600 text-black border-none rounded-full py-2 px-3 text-lg cursor-pointer text-center z-50' %>
























  <div class="w-full">
    <!-- 1. Dikdörtgen -->
    <div class="relative h-[250px] bg-gray-800 border-b border-gray-300 flex items-center px-1.5 overflow-x-auto">
      <div class="w-full h-[200px] bg-gray-800 border border-gray-300 text-white">
        <!-- ID 1 olan column'un içeriği buraya gelir -->
        <%= @static_columns.find { |c| c.id == 1 }&.title %>
        (<%= @column_card_counts[1] %>)
        <!--------------------------------------------------------------->
         <%# <div style="display: flex; flex-wrap: nowrap; align-items: flex-start;">  %>
        <div class="flex-nowrap flex gap-2 items-start">
          <% @cards.each do |card| %>
            <div class="border border-gray-300 p-2.5 m-1.25 bg-gray-800 rounded-sm shadow-md flex-auto">
              <h3><%= card.title %></h3>
              <p><%= card.description %></p>
              <!----------------->
              <p class="text-xs text-gray-500 mt-1">
                By <%= card.user.name %> <%= card.user.lastname[0].capitalize %>. <%= time_ago_in_words(card.created_at) %> ago
              </p>
            </div>
          <% end %>
        </div>
      </div>
      <div class="w-[100px] h-[230px] bg-gray-600 border border-gray-300 ml-auto text-white">
        <!-- ID 2 olan column'un içeriği buraya gelir -->
         (<%= @column_card_counts[2] %>)
        <div class="inline-block rotate-90 origin-bottom-left whitespace-nowrap text-white text-xl">
        <%= @static_columns.find { |c| c.id == 2 }&.title&.upcase %>
        </div>
      </div>
    </div>

    <!-- 2. Dikdörtgen -->
    <div class="w-auto h-[600px] bg-gray-800 border border-gray-300 relative mt-px flex flex-col items-start p-2.5">
      <%# <%= link_to 'Add New Column', new_column_path, class: 'btn-primary' %> 
      <button class="absolute top-9 right-28 w-8 h-8 bg-[#34AADC] text-white border-none rounded-full flex items-center justify-center text-2xl cursor-pointer" onclick="window.location.href='<%= new_column_path %>'">+</button>

      <div class="absolute top-1 right-0 w-[100px] h-[590px] bg-green-900 border border-[#ccc] text-white justify-center">
        <!-- ID 3 olan column'un içeriği buraya gelir -->
        (<%= @column_card_counts[3] %>)
        <div class="inline-block rotate-90 origin-bottom-left whitespace-nowrap text-white text-xl">
        <%= @static_columns.find { |c| c.id == 3 }&.title&.upcase %>
        </div>
      </div>

      <!-- Dinamik Columns -->
      <div style="display: flex; flex-wrap: nowrap; overflow-x: auto;">
      <% @dynamic_columns.each do |column| %>
        <div class="w-80 h-32 border border-gray-300 m-1.5 flex items-center justify-center text-white rounded-sm" style="background-color: <%= column.color_code %>;">
          <h4><%= column.title %> (<%= @column_card_counts[column.id] %>) </h4>
        </div>
      <% end %>
      </div>
    </div>
  </div>



  
</body>


<!-- Modal HTML -->
<div id="cardModal" class="fixed inset-0 bg-gray-900 bg-opacity-50 flex items-center justify-center hidden">
  <div class="bg-white p-6 rounded-lg shadow-lg relative">
    <button id="closeModal" class="absolute top-2 right-2 text-gray-500 hover:text-gray-800">&times;</button>
    <%= form_with model: [@user, @card], local: true do |form| %>
      <div>
        <%= form.label :title %>
        <%= form.text_field :title %>
      </div>

      <div>
        <%= form.label :description %>
        <%= form.text_area :description %>
      </div>

      <div>
        <%= form.submit %>
      </div>
    <% end %>
  </div>
</div>

