
    <div class="container">
      <div class="welcome-section">
        <h1>Card Table'a Hoşgeldiniz</h1>
        <div class="buttons">
          <%= link_to 'Kayıt Ol', signup_path, class: 'btn btn-primary' %>
          <%= link_to 'Giriş Yap', login_path, class: 'btn btn-secondary' %>
        </div>
      </div>
    </div>

    <style>
      .container {
        text-align: center;
        margin-top: 200px;
      }

      .welcome-section h1 {
        font-size: 2.5em;
        margin-bottom: 20px;
      }

      .buttons {
        display: inline-block;
        margin-top: 20px;
      }

      .btn {
        font-size: 1.2em;
        padding: 10px 20px;
        margin: 0 10px;
        text-decoration: none;
        border-radius: 5px;
      }

      .btn-primary {
        background-color: #007bff;
        color: white;
        border: none;
      }

      .btn-secondary {
        background-color: #6c757d;
        color: white;
        border: none;
      }

      .btn-primary:hover, .btn-secondary:hover {
        opacity: 0.8;
      }
    </style>

