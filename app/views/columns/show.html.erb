<div class="flex justify-center items-center min-h-screen w-full bg-gray-900 rounded-lg">
  <div class="w-full h-full p-12 bg-gray-800 text-stone-50 shadow-xl rounded-lg">
    <h1 class="absolute  left-1/2 transform -translate-x-1/2 mt-4 text-6xl font-bold text-center text-teal-50 hover:underline">
      <%= @column.title %> 
    </h1>
    
    <div id="cardModal" class="fixed inset-0 bg-gray-900 bg-opacity-50 flex items-center justify-center hidden">
  <div class="flex flex-col mb-4 bg-slate-800 p-6 rounded-lg shadow-lg relative modal-content text-stone-50 text-xl">
    <p>Add a new card to <%= @column.title %></p>
    <br>
      <%= render 'cards/form' %>

 
  </div>
</div>
<%= link_to '+ Add a card', '#', id: 'openModalButton', class: 'absolute  left-50 bg-green-600 text-black border-none rounded-full py-2 px-3 text-lg cursor-pointer text-center z-50', data: { column_id: @column.id, toggle: 'modal' } %>
    <!-- Horizontal Line -->
    <hr class="mb-6 border-t-2 border-stone-50 m-11 mt-24">





    <div class="space-y-4">
      <% @cards.each do |card| %>
        <div class="bg-gray-700 p-4 rounded-lg shadow-lg">
          <h2 class="text-xl font-semibold"><%= card.title %></h2>
          <p class="mt-2"><%= card.description %></p>
          <p class="text-xs text-gray-500 mt-1">
                By <%= card.user.name %> <%= card.user.lastname[0].capitalize %>. <%= time_ago_in_words(card.created_at) %> ago
              </p>
        </div>
      <% end %>
    </div>






    </div>
</div>
